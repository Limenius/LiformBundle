<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="liform.class">Limenius\Liform\Liform</parameter>
        <parameter key="liform.resolver.class">Limenius\Liform\Resolver</parameter>
        <parameter key="liform.guesser.validator.class">Limenius\Liform\Guesser\ValidatorGuesser</parameter>
        <parameter key="liform.serializer.form_view_normalizer.class">Limenius\Liform\Serializer\Normalizer\FormViewNormalizer</parameter>
        <parameter key="liform.serializer.form_error_normalizer.class">Limenius\Liform\Serializer\Normalizer\FormErrorNormalizer</parameter>
    </parameters>

    <services>
        <service id="liform.add_schema_extension" class="Limenius\Liform\Form\Extension\AddLiformExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\FormType" />
        </service>

        <!-- Normalizes FormInterface when using the symfony serializer -->
        <service id="liform.serializer.form_error_normalizer" class="%liform.serializer.form_error_normalizer.class%" public="false">
            <argument type="service" id="translator" />
            <tag name="serializer.normalizer" priority="-10" />
        </service>

        <service id="liform.serializer.form_view_normalizer" class="%liform.serializer.form_view_normalizer.class%" public="false">
            <tag name="serializer.normalizer" priority="-10" />
        </service>

        <service id="liform.resolver" class="%liform.resolver.class%"/>

        <service id="Limenius\Liform\Liform" public="false">
            <argument type="service" id="liform.resolver" />
        </service>
        <service id="liform" alias="Limenius\Liform\Liform"/>

        <service id="liform.guesser.validator" class="%liform.guesser.validator.class%">
            <argument type="service" id="validator.mapping.class_metadata_factory" />
        </service>
    </services>

</container>
